# Claude Code web agent runtime settings
MAX_TURNS=300
STALE_CLIENT_DELAY_SECONDS=20
MEMORY_INDEX_MAX_ENTRIES=50
AGENT_RUN_TIMEOUT_SECONDS=180

# Feishu
FEISHU_APP_ID=your-feishu-app-id
FEISHU_APP_SECRET=your-feishu-app-secret
FEISHU_ENCRYPT_KEY=
FEISHU_VERIFICATION_TOKEN=
FEISHU_AGENT_TIMEOUT_SECONDS=120
FEISHU_MAX_REPLY_CHARS=600

# Chatlog integration
CHATLOG_ENABLED=true
CHATLOG_BACKFILL_INTERVAL_SECONDS=300
CHATLOG_BASE_URL=http://127.0.0.1:5030
CHATLOG_WEBHOOK_TOKEN=top-secret
CHATLOG_BACKFILL_BOOTSTRAP_DAYS=30
CHATLOG_MONITORED_TALKERS=wxid_xxx,123456@chatroom

# Claude Agent SDK
# Keep at least one valid auth path:
# 1) Direct Anthropic key: ANTHROPIC_API_KEY
# 2) Custom gateway: ANTHROPIC_BASE_URL + ANTHROPIC_AUTH_TOKEN
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_BASE_URL=
ANTHROPIC_AUTH_TOKEN=

# Optional compatibility key (mapped to ANTHROPIC_API_KEY in code)
CLAUDE_API_KEY=

# SDK runtime options
CLAUDE_MODEL=claude-3-5-sonnet-20241022
# allowed: default | acceptEdits | bypassPermissions
PERMISSION_MODE=default
